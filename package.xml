 <name>PEAR_Frontend_Gtk2</name>
 <channel>pear.php.net</channel>
 <summary>Graphical PEAR installer based on PHP-Gtk2</summary>
 <description>
  This program is a graphical frontend for PEAR, the PHP Extension
  and Application Repository. It uses PHP-Gtk2 as graphical toolkit
  and lets you easily browse available packages and install them
  on your computer.
  The program is designed to be by end-users, making it as easy as
  possible to install and uninstall programs.
 </description>

 <lead>
  <name>Christian Weiske</name>
  <user>cweiske</user>
  <email>cweiske@php.net</email>
  <active>yes</active>
 </lead>

 <date>2006-12-12</date>

 <version>
  <release>1.1.0</release>
  <api>1.1.0</api>
 </version>

 <stability>
  <release>stable</release>
  <api>stable</api>
 </stability>

 <license uri="http://www.gnu.org/licenses/lgpl.html">LGPL</license>

 <notes>
  * Fix bug #11990: Close button on About dialog doesn't work
 </notes>

 <contents>
  <dir name="/" baseinstalldir="PEAR/Frontend">
   <file name="Gtk2.php" role="php"/>
   <dir name="Gtk2">
    <file name="About.php"          role="php">
     <tasks:replace from="@VERSION_PEAR_Frontend_Gtk2@" to="version" type="package-info" />
    </file>
    <file name="ChannelDialog.php"  role="php"/>
    <file name="Channels.php"       role="php"/>
    <file name="Checks.php"         role="php"/>
    <file name="Config.php"         role="php">
     <tasks:replace from="@VERSION_PEAR_Frontend_Gtk2@" to="version" type="package-info" />
    </file>
    <file name="Installation.php"   role="php"/>
    <file name="installer.glade"    role="php"/>
    <file name="Package.php"        role="php"/>
    <file name="Packages.php"       role="php"/>

    <file name="run.phpw"           role="php"/>
    <file name="runicon.png"        role="php"/>

    <dir name="pixmaps">
     <file name="default.png"                   role="php"/>
     <file name="gnope.org.png"                 role="php"/>
     <file name="pear.chiaraquartet.net.png"    role="php"/>
     <file name="pear.php.net.png"              role="php"/>
     <file name="pecl.php.net.png"              role="php"/>
     <dir name="progress">
      <file name="load-anim-1.png"              role="php"/>
      <file name="load-anim-2.png"              role="php"/>
      <file name="load-anim-3.png"              role="php"/>
      <file name="load-anim-4.png"              role="php"/>
     </dir>
    </dir>
   </dir>
   <dir name="tests" role="test">
    <file name="ConfigTest.php"     role="php"/>
    <file name="ExpanderTest.phpw"  role="php"/>
    <file name="PackageTest.php"    role="php"/>
    <file name="runtests.php"       role="php"/>
    <file name="TimeDiff.php"       role="php"/>
   </dir>
  </dir>
 </contents>

 <dependencies>
  <required>
   <php>
    <min>5.1</min>
    <max>6.0.0</max>
   </php>
   <pearinstaller>
    <min>1.4.5</min>
   </pearinstaller>
   <package>
    <name>Config</name>
    <channel>pear.php.net</channel>
    <min>1.10.4</min>
   </package>
   <package>
    <name>Gtk2_EntryDialog</name>
